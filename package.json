{
  "name": "westchester-water-rentals",
  "version": "1.0.0",
  "description": "Performance-optimized website for Westchester Water Rentals",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "optimize-images": "node scripts/optimize-images.js",
    "analyze": "npx bundlesize",
    "lighthouse": "lighthouse http://localhost:4173 --output json --output html --output-path ./lighthouse-report",
    "serve": "http-server dist -p 8080 -c-1"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "@vitejs/plugin-legacy": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "cssnano": "^6.0.1",
    "terser": "^5.24.0",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "imagemin-avif": "^0.1.5",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "sharp": "^0.33.0",
    "bundlesize": "^0.18.1",
    "lighthouse": "^11.4.0",
    "http-server": "^14.1.1",
    "vite-plugin-pwa": "^0.17.0",
    "workbox-window": "^7.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "100kb"
    },
    {
      "path": "./dist/**/*.css",
      "maxSize": "50kb"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}